{
    "manifest_version": 3,
    "name": "SmartSwap for Google Docs",
    "version": "1.0.0",
    "description": "Smart clipboard management for Google Docs - paste over text to automatically capture the replaced content",
    "author": "SmartSwap",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardRead",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://docs.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "widget.css"
            ],
            "run_at": "document_idle"
        }
    ]
}